<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="3"
    android:rowCount="3"
    android:orientation="horizontal">


    <RelativeLayout
        android:id="@+id/row_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="5dp"
        android:gravity="center">

        <RelativeLayout
            android:id="@+id/calculator_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="7dp">

            <ImageView
                android:id="@+id/product_image_calculator"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="2dp"
                android:gravity="left"
                android:scaleType="fitCenter"
                android:src="@drawable/calculator" />

            <TextView
                android:id="@+id/category_txt_calculator"
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:layout_below="@+id/product_image_calculator"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="Calculators"
                android:textAlignment="center"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textSize="15dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/pencil_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:layout_toEndOf="@+id/calculator_category">

            <ImageView
                android:id="@+id/product_image_pencil"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="2dp"
                android:scaleType="fitCenter"
                android:src="@drawable/pencil" />

            <TextView
                android:id="@+id/category_txt_pencil"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/product_image_pencil"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:text="Pencils"
                android:textAlignment="center"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textSize="15dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/category_notebooks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:layout_toEndOf="@+id/pencil_category">


            <ImageView
                android:id="@+id/product_image_notebooks"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="2dp"
                android:scaleType="fitCenter"
                android:src="@drawable/notebooks" />

            <TextView
                android:id="@+id/category_txt_notebooks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_image_notebooks"
                android:layout_centerHorizontal="true"
                android:gravity="left"
                android:text="Notebooks"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textSize="15dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/category_sets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:layout_toEndOf="@+id/category_notebooks">


            <ImageView
                android:id="@+id/product_image_sets"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="2dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_baseline_all_inbox_24" />

            <TextView
                android:id="@+id/category_txt_sets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_image_sets"
                android:layout_centerHorizontal="true"
                android:gravity="left"
                android:text="Sets"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textSize="15dp" />

        </RelativeLayout>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/row_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/row_one"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:gravity="center">

        <RelativeLayout
            android:id="@+id/category_textbooks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="7dp">

            <ImageView
                android:id="@+id/product_image_textbooks"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="2dp"
                android:gravity="left"
                android:scaleType="fitCenter"
                android:src="@drawable/books" />

            <TextView
                android:id="@+id/category_txt_textbooks"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/product_image_textbooks"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="TextBooks"
                android:textAlignment="center"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textSize="15dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/category_clips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:layout_toEndOf="@+id/category_textbooks">

            <ImageView
                android:id="@+id/product_image_clips"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="2dp"
                android:scaleType="fitCenter"
                android:src="@drawable/paper_clip_icon" />

            <TextView
                android:id="@+id/category_txt_clips"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/product_image_clips"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:text="Clips"
                android:textAlignment="center"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textSize="15dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/category_pins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:layout_toEndOf="@+id/category_clips">


            <ImageView
                android:id="@+id/product_image_pins"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="2dp"
                android:scaleType="fitCenter"
                android:src="@drawable/pushpin" />

            <TextView
                android:id="@+id/category_txt_pins"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/product_image_pins"
                android:layout_centerHorizontal="true"
                android:gravity="left"
                android:text="PushPin"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textSize="15dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/category_stapler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:layout_toEndOf="@+id/category_pins">

            <ImageView
                android:id="@+id/product_image_stapler"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="2dp"
                android:gravity="left"
                android:scaleType="fitCenter"
                android:src="@drawable/stapler" />

            <TextView
                android:id="@+id/category_txt_stapler"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/product_image_stapler"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="Staplers"
                android:textAlignment="center"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textSize="15dp" />

        </RelativeLayout>


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/row_three"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/row_two"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:id="@+id/category_glue"
            android:layout_margin="7dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/product_image_glue"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="2dp"
                android:gravity="left"
                android:scaleType="fitCenter"
                android:src="@drawable/glue_icon" />

            <TextView
                android:id="@+id/category_txt_glue"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/product_image_glue"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="Glue"
                android:textAlignment="center"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textSize="15dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/category_rulers"
            android:layout_width="wrap_content"
            android:layout_toEndOf="@+id/category_glue"
            android:layout_margin="7dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/product_image_rulers"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="2dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ruler" />

            <TextView
                android:id="@+id/category_txt_rulers"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/product_image_rulers"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:text="Clips"
                android:textAlignment="center"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textSize="15dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/category_tape"
            android:layout_width="wrap_content"
            android:layout_toEndOf="@+id/category_rulers"
            android:layout_margin="7dp"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/product_image_tape"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="2dp"
                android:scaleType="fitCenter"
                android:src="@drawable/tape" />

            <TextView
                android:id="@+id/category_txt_tape"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/product_image_tape"
                android:layout_centerHorizontal="true"
                android:gravity="left"
                android:text="PushPin"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textSize="15dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:id="@+id/category_scissors"
            android:layout_toEndOf="@+id/category_tape"
            android:layout_margin="7dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/product_image_scissors"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="2dp"
                android:scaleType="fitCenter"
                android:src="@drawable/scissors_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:id="@+id/category_txt_scissors"
                android:layout_below="@+id/product_image_scissors"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:text="Staplers"
                android:textSize="15dp"
                />

        </RelativeLayout>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/row_four"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/row_three"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:id="@+id/category_sharpener"
            android:layout_margin="7dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/product_image_sharpener"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="2dp"
                android:gravity="left"
                android:scaleType="fitCenter"
                android:src="@drawable/hand_sharpener" />

            <TextView
                android:id="@+id/category_txt_sharpener"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/product_image_sharpener"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="Shapener"
                android:textAlignment="center"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textSize="15dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/category_pens"
            android:layout_width="wrap_content"
            android:layout_toEndOf="@+id/category_sharpener"
            android:layout_margin="7dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/product_image_pens"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="2dp"
                android:scaleType="fitCenter"
                android:src="@drawable/calligraphy_pen" />

            <TextView
                android:id="@+id/category_txt_pens"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/product_image_pens"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:text="Pens"
                android:textAlignment="center"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textSize="15dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/category_cutters"
            android:layout_width="wrap_content"
            android:layout_toEndOf="@+id/category_pens"
            android:layout_margin="7dp"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/product_image_cutters"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="2dp"
                android:scaleType="fitCenter"
                android:src="@drawable/danger_cutter" />

            <TextView
                android:id="@+id/category_txt_cutters"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/product_image_cutters"
                android:layout_centerHorizontal="true"
                android:gravity="left"
                android:text="Cutter"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textSize="15dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:id="@+id/category_punch"
            android:layout_toEndOf="@+id/category_cutters"
            android:layout_margin="7dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/product_image_punch"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="2dp"
                android:gravity="left"
                android:scaleType="fitCenter"
                android:src="@drawable/punching_machine" />

            <TextView
                android:id="@+id/category_txt_punch"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/product_image_punch"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="Punch"
                android:textAlignment="center"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textSize="15dp" />

        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>